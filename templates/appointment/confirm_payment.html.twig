{% extends 'baseCustomer.html.twig' %}

{% block title %}Xác nhận thanh toán
{% endblock %}

{% block body %}
	<form method="POST" action="{{ path('process_appointment') }}">
		<input type="hidden" name="doctorId" value="{{ doctor.id }}">
		<input type="hidden" name="date" value="{{ date|date('Y-m-d') }}">
		<input type="hidden" name="timeSlot" value="{{ timeSlot }}">

		<label>
			<b>Họ tên bệnh nhân:</b>
		</label>
		<input type="text" name="patientFullname" value="{{ patient.fullname }}" required>

		<label>
			<b>Ngày sinh:</b>
		</label>
		<input type="date" name="patientDateOfBirth" value="{{ patient.dateOfBirth|date('Y-m-d') }}" required>

		<label>
			<b>Số điện thoại:</b>
		</label>
		<input type="text" name="patientPhoneNumber" value="{{ patient.phoneNumber }}" required>

		<label>
			<b>Địa chỉ:</b>
		</label>
		<input type="text" name="patientAddress" value="{{ patient.address }}" required>

		<label>
			<b>Giới tính:</b>
		</label>
		<select name="patientGender" required>
			<option value="Male" {{ patient.gender == 'Male' ? 'selected' : '' }}>Nam</option>
			<option value="Female" {{ patient.gender == 'Female' ? 'selected' : '' }}>Nữ</option>
		</select>

		<label>
			<b>Email:</b>
		</label>
		<input type="email" name="patientEmail" value="{{ patient.email }}">

		<label>
			<b>Đặt lịch cho:</b>
		</label>
		<select name="forWho" required>
			<option value="self">Bản thân</option>
			<option value="relative">Người thân</option>
		</select>

		<label>
			<b>Lý do khám:</b>
		</label>
		<textarea name="reason" required></textarea>

		<button type="submit">Xác nhận đặt lịch</button>
	</form>

{% endblock %}
