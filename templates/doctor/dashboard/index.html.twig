{% extends 'baseCustomer.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<!-- Breadcrumb -->
	<div class="breadcrumb-bar">
		<div class="container-fluid">
			<div class="row align-items-center">
				<div class="col-md-12 col-12">
					<nav aria-label="breadcrumb" class="page-breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="{{path('app_home')}}">Home</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Dashboard</li>
						</ol>
					</nav>
					<h2 class="breadcrumb-title">Dashboard</h2>
				</div>
			</div>
		</div>
	</div>
	<!-- /Breadcrumb -->

	<!-- Page Content -->
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div
					class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">

					<!-- Profile Sidebar -->
					{% include '_sidebar.html.twig' %}
					<!-- /Profile Sidebar -->

				</div>

				<div class="col-md-7 col-lg-8 col-xl-9">

					<div class="row">
						<div class="col-md-12">
							<div class="card dash-card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-12 col-lg-4">
											<div class="dash-widget dct-border-rht">
												<div class="circle-bar circle-bar1">
													<div class="circle-graph1" data-percent="75">
														<img src="{{asset('customer/assets/img/icon-01.png')}}" class="img-fluid" alt="patient">
													</div>
												</div>
												<div class="dash-widget-info">
													<h6>Total Patient</h6>
													<h3>1500</h3>
													<p class="text-muted">Till Today</p>
												</div>
											</div>
										</div>

										<div class="col-md-12 col-lg-4">
											<div class="dash-widget dct-border-rht">
												<div class="circle-bar circle-bar2">
													<div class="circle-graph2" data-percent="65">
														<img src="{{asset('customer/assets/img/icon-02.png')}}" class="img-fluid" alt="Patient">
													</div>
												</div>
												<div class="dash-widget-info">
													<h6>Today Patient</h6>
													<h3>160</h3>
													<p class="text-muted">06, Nov 2019</p>
												</div>
											</div>
										</div>

										<div class="col-md-12 col-lg-4">
											<div class="dash-widget">
												<div class="circle-bar circle-bar3">
													<div class="circle-graph3" data-percent="50">
														<img src="{{asset('customer/assets/img/icon-03.png')}}" class="img-fluid" alt="Patient">
													</div>
												</div>
												<div class="dash-widget-info">
													<h6>Appoinments</h6>
													<h3>85</h3>
													<p class="text-muted">06, Apr 2019</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-12">
							<h4 class="mb-4">Lịch hẹn bệnh nhân</h4>
							<div
								class="appointment-tab">

								<!-- Appointment Tab -->
								<ul class="nav nav-tabs nav-tabs-solid nav-tabs-rounded">
									<li class="nav-item">
										<a class="nav-link" href="#today-appointments" data-toggle="tab">Hôm nay</a>
									</li>
									<li class="nav-item">
										<a class="nav-link active" href="#upcoming-appointments" data-toggle="tab">Sắp tới</a>
									</li>
								</ul>
								<!-- /Appointment Tab -->

								<div
									class="tab-content">


									<!-- Today Appointment Tab -->
									<div class="tab-pane" id="today-appointments">
										<div class="card card-table mb-0">
											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-hover table-center mb-0">
														<thead>
															<tr class="text-center">
																<th>Tên BN</th>
																<th>Ngày khám</th>
																<th>Chuẩn đoán</th>
																<th class="text-center">Tổng tiền</th>
																<th></th>
															</tr>
														</thead>
														<tbody>
															{% for apTo in appointmentsToday %}

																<tr>
																	<td>
																		<h2 class="table-avatar">
																			<a href="patient-profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="{{ apTo.patient.image ? asset('uploads/users/' ~ apTo.patient.image) : asset('uploads/users/defaultUser.png') }}" alt="User Image"></a>
																			<a href="patient-profile.html">{{apTo.patient.fullname}}
																				<span>#P{{apTo.patient.id}}</span>
																			</a>
																		</h2>
																	</td>
																	<td>{{apTo.appointmentDate|date('d/m/Y')}}
																		<span class="d-block text-info">{{apTo.appointmentTime}}</span>
																	</td>
																	<td>{{apTo.result}}</td>
																	<td class="text-center">{{apTo.price | currency_vnd}}</td>
																	<td class="text-right">
																		<div class="table-action">
																			<a href="{{path('app_doctor_appointment_show', {'id': apTo.id})}}" class="btn btn-sm bg-info-light">
																				<i class="far fa-eye"></i>
																				Chi tiết
																			</a>

																			<a href="{{path('app_doctor_appointment_edit', {'id': apTo.id})}}" class="btn btn-sm bg-success-light">
																				<i class="fas fa-check"></i>
																				Duyệt
																			</a>
																			<a href="javascript:void(0);" class="btn btn-sm bg-danger-light">
																				<i class="fas fa-times"></i>
																				Hủy
																			</a>
																		</div>
																	</td>
																</tr>
															{% endfor %}

														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
									<!-- /Today Appointment Tab -->


									<!-- Upcoming Appointment Tab -->
									<div class="tab-pane show active" id="upcoming-appointments">
										<div class="card card-table mb-0">
											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-hover table-center mb-0">
														<thead>
															<tr class="text-center">
																<th>Tên BN</th>
																<th>Ngày khám</th>
																<th>Chuẩn đoán</th>

																<th class="text-center">Tổng tiền</th>
																<th></th>
															</tr>
														</thead>
														<tbody>

															{% for apUp in appointmentsUpcoming %}
																<tr class="text-center">
																	<td>
																		<h2 class="table-avatar">
																			<a href="patient-profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="{{ apUp.patient.image ? asset('uploads/users/' ~ apUp.patient.image) : asset('uploads/users/defaultUser.png') }}" alt="User Image"></a>
																			<a href="patient-profile.html">{{apUp.patient.fullname}}
																				<span>#P{{apUp.patient.id}}</span>
																			</a>
																		</h2>
																	</td>
																	<td>{{apUp.appointmentDate|date('d/m/Y')}}
																		<span class="d-block text-info">{{apUp.appointmentTime}}</span>
																	</td>
																	<td>{{apUp.result}}</td>
																	<td class="text-center">{{apUp.price | currency_vnd}}</td>
																	<td class="text-right">
																		<div class="table-action">
																			<a href="{{path('app_doctor_appointment_show', {'id': apUp.id})}}" class="btn btn-sm bg-info-light">
																				<i class="far fa-eye"></i>
																				Chi tiết
																			</a>

																			{# <a href="javascript:void(0);" class="btn btn-sm bg-success-light">
																																																										<i class="fas fa-check"></i>
																																																										Duyệt
																																																									</a> #}
																			<a href="javascript:void(0);" class="btn btn-sm bg-danger-light">
																				<i class="fas fa-times"></i>
																				Hủy
																			</a>
																		</div>
																	</td>
																</tr>
															{% endfor %}

														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
									<!-- /Upcoming Appointment Tab -->


								</div>
							</div>
						</div>
					</div>

				</div>
			</div>

		</div>

	</div>
	<!-- /Page Content -->
{% endblock %}

{% block JSCustom %}
	{# <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> #}


	<!-- Sticky Sidebar JS --><script src="{{asset('customer/assets/plugins/theia-sticky-sidebar/ResizeSensor.js')}}"> </script>
	<script src="{{asset('customer/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js')}}"></script>

	<!-- Circle Progress JS -->
	<script src="{{asset('customer/assets/js/circle-progress.min.js')}}"></script>

{% endblock %}
