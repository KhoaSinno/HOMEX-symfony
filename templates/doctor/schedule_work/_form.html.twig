{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="form-group">
	{{ form_label(form.maxPatient, 'Số lượng bệnh nhân tối đa', {'label_attr': {'class': 'font-weight-bold'}}) }}
	{{ form_widget(form.maxPatient, {'attr': {'class': 'form-control', 'placeholder': 'Nhập số bệnh nhân tối đa'}}) }}
</div>

<div class="form-group  col-md-4">
	{{ form_label(form.date, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
	{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
	<div class="invalid-feedback d-block">
		{{ form_errors(form.date) }}
	</div>
</div>

