</div> #}


<div class="form-group">
	<label class="font-weight-bold required">Chọn khung giờ làm việc</label>
	<div class="row">
		{% for choice in form.timeSlots %}
			<div class="col-md-3 col-sm-4 col-6">
				<label class="time-slot-card">
					{{ form_widget(choice, {'attr': {'class': 'd-none'}}) }}
					<div class="time-slot-content">
						<span>{{ choice.vars.label }}</span>
					</div>
				</label>
			</div>
		{% endfor %}
	</div>
</div>


<div class="form-group">
	{{ form_label(form.status, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
	{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
</div>

<button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Lưu') }}</button>
			{{ form_row(form._token) }}

{{ form_end(form, {'render_rest': false}) }}
