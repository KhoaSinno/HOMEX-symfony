{% extends 'base.html.twig' %}

{% block title %}ScheduleWork index{% endblock %}

{% block body %}
    <h1>ScheduleWork index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>TimeStart</th>
                <th>TimeEnd</th>
                <th>MaxPatient</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule_work in schedule_works %}
            <tr>
                <td>{{ schedule_work.id }}</td>
                <td>{{ schedule_work.date ? schedule_work.date|date('Y-m-d') : '' }}</td>
                <td>{{ schedule_work.timeStart ? schedule_work.timeStart|date('H:i:s') : '' }}</td>
                <td>{{ schedule_work.timeEnd ? schedule_work.timeEnd|date('H:i:s') : '' }}</td>
                <td>{{ schedule_work.maxPatient }}</td>
                {# <td>{{ schedule_work.status }}</td> #}
                <td>
                    <a href="{{ path('app_schedule_work_show', {'id': schedule_work.id}) }}">show</a>
                    <a href="{{ path('app_schedule_work_edit', {'id': schedule_work.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_schedule_work_new') }}">Create new</a>
{% endblock %}
