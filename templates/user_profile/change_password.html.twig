{% extends 'baseCustomer.html.twig' %}

{% block title %}Thông tin người dùng
{% endblock %}


{% block body %}
	<!-- Breadcrumb -->
	<div class="breadcrumb-bar">
		<div class="container-fluid">
			<div class="row align-items-center">
				<div class="col-md-12 col-12">
					<nav aria-label="breadcrumb" class="page-breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="{{path('app_home')}}">Home</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Dashboard</li>
						</ol>
					</nav>
					<h2 class="breadcrumb-title">Dashboard</h2>
				</div>
			</div>
		</div>
	</div>
	<!-- /Breadcrumb -->

	<!-- Page Content -->
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div
					class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">

					<!-- Profile Sidebar -->
					{% include '_sidebar.html.twig' %}
					<!-- /Profile Sidebar -->

				</div>

				<div class="col-md-7 col-lg-8 col-xl-9">

					<div class="row">
						<div class="col-md-12">
							<div class="card p-2 text-center">
								<h2>Cập nhật mật khẩu</h2>
							</div>
							<div class="card dash-card">
								<div class="card-body">
									{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
									<div class="row justify-content-center align-items-center">

										<div class="col-md-6">
											<div class="form-group">
												{{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
												{{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.newPassword.first) }}
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												{{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
												{{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.newPassword.second) }}
											</div>
										</div>
										<button type="submit" class="btn btn-primary btn-block">Đổi mật khẩu</button>

									</div>
									{{ form_end(form) }}


								</div>
							</div>
						</div>
					</div>

				</div>
			</div>

		</div>

	</div>
	<!-- /Page Content -->
{% endblock %}
